<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Car Rental System</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="~/css/portfolio.styles.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
  <!-- Sidebar Menu -->
  <div class="sidebar">
    <div class="sidebar-header">
      <h4>
        <i class="bi bi-car-front-fill"></i>
        <span>CarRental</span>
      </h4>
    </div>

    <div class="sidebar-menu">
      <!-- Main Navigation -->
      <div class="nav flex-column">
        <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
          <i class="bi bi-speedometer2"></i>
          <span>Dashboard</span>
        </a>

        <a class="nav-link" asp-controller="Car" asp-action="Index">
          <i class="bi bi-car-front"></i>
          <span>Cars</span>
        </a>
        <a class="nav-link" asp-controller="Employees" asp-action="Index">
          <i class="bi bi-car-front"></i>
          <span>Employees</span>
        </a>
        <a class="nav-link" asp-controller="Customers" asp-action="Index">
          <i class="bi bi-people"></i>
          <span>Customers</span>
        </a>

        <a class="nav-link" asp-controller="Rentals" asp-action="Index">
          <i class="bi bi-calendar-check"></i>
          <span>My Rentals</span>
        </a>

        <a class="nav-link" asp-controller="Rentals" asp-action="Active">
          <i class="bi bi-clock"></i>
          <span>Active Rentals</span>
        </a>

        <a class="nav-link" asp-controller="Payment" asp-action="Index">
          <i class="bi bi-credit-card"></i>
          <span>Payments</span>
        </a>

        <!-- Invoices Section -->
        <div class="nav-divider"></div>

        <a class="nav-link" asp-controller="Payment" asp-action="History">
          <i class="bi bi-receipt"></i>
          <span> Receipts</span>
        </a>

   

        <div class="nav-divider"></div>

        <!-- User Section -->
        @if(User.Identity?.IsAuthenticated==true)
        {
          <div class="user-section">
            <div class="user-info">
              <div class="user-avatar">
                @User.Identity.Name?.Substring(0,1).ToUpper()
              </div>
              <div>
                <div class="fw-bold">@User.Identity.Name</div>
                <small class="text-muted">Employee</small>
              </div>
            </div>

            <div class="mt-3">
              <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-outline-light w-100">
                  <i class="bi bi-box-arrow-right"></i> Logout
                </button>
              </form>
            </div>
          </div>
        }
        else
        {
          <div class="user-section text-center">
            <a asp-controller="Auth" asp-action="Login" class="btn btn-sm btn-primary w-100 mb-2">
              <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
            <a asp-controller="Auth" asp-action="Register" class="btn btn-sm btn-success w-100">
              <i class="bi bi-person-plus"></i> Sign Up
            </a>
          </div>
        }
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <main role="main">
    <div class="content-wrapper">
      @RenderBody()
    </div>
  </main>

  <!-- Footer -->
  <footer class="border-top">
    <div class="container">
      <div class="row py-4">
        <div class="col-md-4 mb-3">
          <h5 class="fw-bold">
            <i class="bi bi-car-front-fill text-primary"></i> CarRental
          </h5>
          <p class="text-muted small">
            Your trusted partner for quality car rentals.
            Drive with confidence and comfort.
          </p>
        </div>
        <div class="col-md-4 mb-3">
          <h6 class="fw-bold">Quick Links</h6>
          <ul class="list-unstyled small">
            <li><a href="#" class="text-muted text-decoration-none">About Us</a></li>
            <li><a href="#" class="text-muted text-decoration-none">Contact</a></li>
            <li><a href="#" class="text-muted text-decoration-none">Terms of Service</a></li>
            <li>
              <a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">
                Privacy Policy
              </a>
            </li>
          </ul>
        </div>
        <div class="col-md-4 mb-3">
          <h6 class="fw-bold">Contact Us</h6>
          <p class="text-muted small mb-1">
            <i class="bi bi-telephone"></i> +1 (555) 123-4567
          </p>
          <p class="text-muted small mb-1">
            <i class="bi bi-envelope"></i> info@carrental.com
          </p>
          <p class="text-muted small">
            <i class="bi bi-geo-alt"></i> 123 Main St, City, State 12345
          </p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-6">
          <p class="text-muted small mb-0">
            &copy; @DateTime.Now.Year CarRental System. All rights reserved.
          </p>
        </div>
        <div class="col-md-6 text-md-end">
          <a href="#" class="text-muted me-3"><i class="bi bi-facebook"></i></a>
          <a href="#" class="text-muted me-3"><i class="bi bi-twitter"></i></a>
          <a href="#" class="text-muted me-3"><i class="bi bi-instagram"></i></a>
          <a href="#" class="text-muted"><i class="bi bi-linkedin"></i></a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  <script>
    $(document).ready(function() {
      var currentPath = window.location.pathname.toLowerCase();
      $('.sidebar-menu .nav-link').each(function() {
        var href = $(this).attr('href');
        if (href && currentPath.indexOf(href.toLowerCase()) !== -1 && href !== '/') {
          $(this).addClass('active');
        }
      });
    });

    function printAllReceipts() {
      alert('This will open a page with all your receipts for printing.');

    }
    function toggleSidebar() {
      $('.sidebar').toggleClass('show');
    }
  </script>

  @await RenderSectionAsync("Scripts",required: false)
</body>
</html>