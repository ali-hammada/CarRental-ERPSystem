<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Car Rental System</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/PortFolio.styles.css" asp-append-version="true" />

  <style>
    :root {
      --primary-color: #0d6efd;
      --secondary-color: #6c757d;
      --success-color: #198754;
      --danger-color: #dc3545;
      --warning-color: #ffc107;
      --info-color: #0dcaf0;
      --sidebar-width: 280px;
      --sidebar-bg: #2c3e50;
      --sidebar-hover: #34495e;
      --sidebar-active: #1a252f;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      overflow-x: hidden;
    }

    main {
      flex: 1;
      margin-right: var(--sidebar-width);
      padding-top: 60px;
      transition: margin-right 0.3s ease;
    }

    /* Sidebar Styles */
    .sidebar {
      position: fixed;
      top: 0;
      right: 0;
      height: 100vh;
      width: var(--sidebar-width);
      background: var(--sidebar-bg);
      color: white;
      z-index: 1000;
      box-shadow: -2px 0 10px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }

    .sidebar-header {
      padding: 20px;
      background: rgba(0,0,0,0.2);
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

      .sidebar-header h4 {
        margin: 0;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 10px;
      }

    .sidebar-menu {
      padding: 20px 0;
      overflow-y: auto;
      height: calc(100vh - 60px);
    }

      .sidebar-menu .nav-item {
        margin-bottom: 5px;
      }

      .sidebar-menu .nav-link {
        color: rgba(255,255,255,0.85);
        padding: 12px 25px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
      }

        .sidebar-menu .nav-link:hover {
          color: white;
          background: var(--sidebar-hover);
          border-left-color: var(--primary-color);
        }

        .sidebar-menu .nav-link.active {
          color: white;
          background: var(--sidebar-active);
          border-left-color: var(--primary-color);
        }

        .sidebar-menu .nav-link i {
          width: 20px;
          font-size: 1.1rem;
        }

      .sidebar-menu .dropdown-toggle::after {
        margin-left: auto;
      }

      .sidebar-menu .dropdown-menu {
        background: var(--sidebar-bg);
        border: none;
        box-shadow: -5px 5px 15px rgba(0,0,0,0.2);
        position: absolute;
        right: 100%;
        top: 0;
        width: var(--sidebar-width);
        border-radius: 0;
        padding: 10px 0;
      }

      .sidebar-menu .dropdown-item {
        color: rgba(255,255,255,0.85);
        padding: 10px 25px;
        display: flex;
        align-items: center;
        gap: 10px;
      }

        .sidebar-menu .dropdown-item:hover {
          color: white;
          background: var(--sidebar-hover);
        }

        .sidebar-menu .dropdown-item i {
          width: 18px;
        }

      .sidebar-menu .nav-divider {
        height: 1px;
        background: rgba(255,255,255,0.1);
        margin: 10px 20px;
      }

    .user-section {
      padding: 15px 25px;
      border-top: 1px solid rgba(255,255,255,0.1);
      margin-top: 10px;
    }

      .user-section .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
        color: white;
      }

    .user-avatar {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: var(--primary-color);
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 0.9rem;
    }

    /* Responsive Sidebar */
    @@media (max-width: 992px) {
      .sidebar

    {
      transform: translateX(100%);
    }

    .sidebar.show {
      transform: translateX(0);
    }

    main {
      margin-right: 0;
    }

    .sidebar-toggle {
      display: block !important;
    }

    }

    /* Content Area */
    .content-wrapper {
      padding: 20px;
      min-height: calc(100vh - 60px);
    }

    footer {
      background-color: #f8f9fa;
      padding: 2rem 0;
      margin-top: 3rem;
      margin-right: var(--sidebar-width);
      transition: margin-right 0.3s ease;
    }

    @@media (max-width: 992px) {
      footer

    {
      margin-right: 0;
    }

    }
  </style>
</head>
<body>
  <!-- Sidebar Menu -->
  <div class="sidebar">
    <div class="sidebar-header">
      <h4>
        <i class="bi bi-car-front-fill"></i>
        <span>CarRental System</span>
      </h4>
    </div>

    <div class="sidebar-menu">
      <!-- Main Navigation -->
      <div class="nav flex-column">
        <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
          <i class="bi bi-speedometer2"></i>
          <span>Dashboard</span>
        </a>

        <a class="nav-link" asp-controller="Car" asp-action="Index">
          <i class="bi bi-car-front"></i>
          <span>Cars</span>
        </a>

        <a class="nav-link" asp-controller="Rentals" asp-action="Index">
          <i class="bi bi-calendar-check"></i>
          <span>My Rentals</span>
        </a>

        <a class="nav-link" asp-controller="Rentals" asp-action="Active">
          <i class="bi bi-clock"></i>
          <span>Active Rentals</span>
        </a>

        <a class="nav-link" asp-controller="Payment" asp-action="Index">
          <i class="bi bi-credit-card"></i>
          <span>Payments</span>
        </a>

        <!-- Invoices Section -->
        <div class="nav-divider"></div>

        <a class="nav-link" asp-controller="Payment" asp-action="History">
          <i class="bi bi-receipt"></i>
          <span> Receipts</span>
        </a>

   

        <div class="nav-divider"></div>

        <!-- User Section -->
        @if(User.Identity?.IsAuthenticated==true)
        {
          <div class="user-section">
            <div class="user-info">
              <div class="user-avatar">
                @User.Identity.Name?.Substring(0,1).ToUpper()
              </div>
              <div>
                <div class="fw-bold">@User.Identity.Name</div>
                <small class="text-muted">Customer</small>
              </div>
            </div>

            <div class="mt-3">
              <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-outline-light w-100">
                  <i class="bi bi-box-arrow-right"></i> Logout
                </button>
              </form>
            </div>
          </div>
        }
        else
        {
          <div class="user-section text-center">
            <a asp-controller="Auth" asp-action="Login" class="btn btn-sm btn-primary w-100 mb-2">
              <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
            <a asp-controller="Auth" asp-action="Register" class="btn btn-sm btn-success w-100">
              <i class="bi bi-person-plus"></i> Sign Up
            </a>
          </div>
        }
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <main role="main">
    <div class="content-wrapper">
      @RenderBody()
    </div>
  </main>

  <!-- Footer -->
  <footer class="border-top">
    <div class="container">
      <div class="row py-4">
        <div class="col-md-4 mb-3">
          <h5 class="fw-bold">
            <i class="bi bi-car-front-fill text-primary"></i> CarRental
          </h5>
          <p class="text-muted small">
            Your trusted partner for quality car rentals.
            Drive with confidence and comfort.
          </p>
        </div>
        <div class="col-md-4 mb-3">
          <h6 class="fw-bold">Quick Links</h6>
          <ul class="list-unstyled small">
            <li><a href="#" class="text-muted text-decoration-none">About Us</a></li>
            <li><a href="#" class="text-muted text-decoration-none">Contact</a></li>
            <li><a href="#" class="text-muted text-decoration-none">Terms of Service</a></li>
            <li>
              <a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">
                Privacy Policy
              </a>
            </li>
          </ul>
        </div>
        <div class="col-md-4 mb-3">
          <h6 class="fw-bold">Contact Us</h6>
          <p class="text-muted small mb-1">
            <i class="bi bi-telephone"></i> +1 (555) 123-4567
          </p>
          <p class="text-muted small mb-1">
            <i class="bi bi-envelope"></i> info@carrental.com
          </p>
          <p class="text-muted small">
            <i class="bi bi-geo-alt"></i> 123 Main St, City, State 12345
          </p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-6">
          <p class="text-muted small mb-0">
            &copy; @DateTime.Now.Year CarRental System. All rights reserved.
          </p>
        </div>
        <div class="col-md-6 text-md-end">
          <a href="#" class="text-muted me-3"><i class="bi bi-facebook"></i></a>
          <a href="#" class="text-muted me-3"><i class="bi bi-twitter"></i></a>
          <a href="#" class="text-muted me-3"><i class="bi bi-instagram"></i></a>
          <a href="#" class="text-muted"><i class="bi bi-linkedin"></i></a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  <script>
    // Active link highlighting
    $(document).ready(function() {
      var currentPath = window.location.pathname.toLowerCase();
      $('.sidebar-menu .nav-link').each(function() {
        var href = $(this).attr('href');
        if (href && currentPath.indexOf(href.toLowerCase()) !== -1 && href !== '/') {
          $(this).addClass('active');
        }
      });
    });

    // Print all receipts function
    function printAllReceipts() {
      alert('This will open a page with all your receipts for printing.');
      // You can redirect to a page that shows all receipts
      // window.location.href = '/Payment/AllReceipts';
    }

    // Mobile sidebar toggle
    function toggleSidebar() {
      $('.sidebar').toggleClass('show');
    }
  </script>

  @await RenderSectionAsync("Scripts",required: false)
</body>
</html>