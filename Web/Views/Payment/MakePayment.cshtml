@{
  ViewData["Title"]="Make Payment";
  var rentalId = (int)ViewBag.RentalId;
  var remainingAmount = (decimal)ViewBag.RemainingAmount;
}

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-7">

      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h4 class="mb-0">
            <i class="bi bi-credit-card"></i> Make Payment
          </h4>
        </div>
        <div class="card-body">

          @if(TempData["Error"]!=null)
          {
            <div class="alert alert-danger alert-dismissible fade show">
              <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          }

          <!-- معلومات المبلغ المتبقي -->
          <div class="alert alert-info">
            <div class="d-flex justify-content-between align-items-center">
              <span><i class="bi bi-info-circle"></i> <strong>Remaining Amount:</strong></span>
              <h4 class="mb-0 text-primary">@remainingAmount.ToString("C")</h4>
            </div>
          </div>

          <form asp-action="MakePayment" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="rentalId" value="@rentalId" />

            <!-- نوع الدفع -->
            <div class="mb-3">
              <label for="purpose" class="form-label">
                <i class="bi bi-tag"></i> Payment Type
              </label>
              <select name="purpose" id="purpose" class="form-select" required>
                <option value="">Select payment type...</option>
                <option value="@ApplicationCore.Entities.Enums.PaymentPurpose.Partial">
                  Partial Payment
                </option>
                <option value="@ApplicationCore.Entities.Enums.PaymentPurpose.Final">
                  Final Payment
                </option>
                <option value="@ApplicationCore.Entities.Enums.PaymentPurpose.Penalty">
                  Penalty
                </option>
              </select>
            </div>

            <!-- المبلغ -->
            <div class="mb-3">
              <label for="amount" class="form-label">
                <i class="bi bi-cash"></i> Amount
              </label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" name="amount" id="amount" class="form-control"
                       step="0.01" min="0.01" placeholder="Enter amount" required />
              </div>
              <small class="form-text text-muted" id="amountHelp"></small>
            </div>

            <!-- طريقة الدفع -->
            <div class="mb-3">
              <label for="method" class="form-label">
                <i class="bi bi-wallet2"></i> Payment Method
              </label>
              <select name="method" id="method" class="form-select" required>
                <option value="">Select payment method...</option>
                <option value="@ApplicationCore.Entities.Enums.PaymentMethod.Cash">
                  <i class="bi bi-cash-stack"></i> Cash
                </option>
                <option value="@ApplicationCore.Entities.Enums.PaymentMethod.Visa">
                  Credit Card
               </option>
                <option value="@ApplicationCore.Entities.Enums.PaymentMethod.BankTransfer">
                  Bank Transfer
                </option>
              </select>
            </div>

            <!-- ملخص الدفع -->
            <div class="card bg-light mb-4" id="paymentSummary" style="display: none;">
              <div class="card-body">
                <h6 class="text-success mb-3">
                  <i class="bi bi-receipt"></i> Payment Summary
                </h6>
                <div class="row">
                  <div class="col-6"><strong>Payment Type:</strong></div>
                  <div class="col-6 text-end" id="summaryType">-</div>
                </div>
                <div class="row">
                  <div class="col-6"><strong>Amount:</strong></div>
                  <div class="col-6 text-end" id="summaryAmount">-</div>
                </div>
                <div class="row">
                  <div class="col-6"><strong>Method:</strong></div>
                  <div class="col-6 text-end" id="summaryMethod">-</div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-6"><strong>Remaining After:</strong></div>
                  <div class="col-6 text-end">
                    <strong id="summaryRemaining" class="text-danger">-</strong>
                  </div>
                </div>
              </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <a asp-controller="Rentals" asp-action="Index" asp-route-rentalId="@rentalId"
                 class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Cancel
              </a>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Process Payment
              </button>
            </div>
          </form>

        </div>
      </div>

    </div>
  </div>
</div>

@section Scripts {
  <script>
    const remainingAmount = @Html.Raw(Json.Serialize(remainingAmount));

    const PaymentPurpose = {
        Partial: @((int)ApplicationCore.Entities.Enums.PaymentPurpose.Partial),
        Final: @((int)ApplicationCore.Entities.Enums.PaymentPurpose.Final),
        Penalty: @((int)ApplicationCore.Entities.Enums.PaymentPurpose.Penalty)
    };

    const purposeSelect = document.getElementById('purpose');
    const amountInput = document.getElementById('amount');
    const methodSelect = document.getElementById('method');
    const amountHelp = document.getElementById('amountHelp');
    const paymentSummary = document.getElementById('paymentSummary');

    purposeSelect.addEventListener('change', function() {
        const purpose = parseInt(this.value);

        amountInput.value = '';

        if (purpose === PaymentPurpose.Final) {
            amountInput.min = remainingAmount;
            amountInput.max = '';
            amountHelp.textContent = `Required: ${formatCurrency(remainingAmount)}`;
            amountHelp.className = 'form-text text-success fw-bold';
        } else if (purpose === PaymentPurpose.Partial) {
            let maxAmount = Math.max(0.01, remainingAmount - 0.01);
            amountInput.min = 0.01;
            amountInput.max = maxAmount;
            amountHelp.textContent = `Max: ${formatCurrency(maxAmount)}`;
            amountHelp.className = 'form-text text-warning';
        } else {
            amountInput.min = 0.01;
            amountInput.max = '';
            amountHelp.textContent = 'Enter penalty amount';
            amountHelp.className = 'form-text text-muted';
        }
        updateSummary();
    });

    amountInput.addEventListener('input', updateSummary);
    methodSelect.addEventListener('change', updateSummary);

    function updateSummary() {
        const purposeVal = parseInt(purposeSelect.value);
        const purposeText = purposeSelect.options[purposeSelect.selectedIndex]?.text;
        const amount = parseFloat(amountInput.value) || 0;
        const method = methodSelect.options[methodSelect.selectedIndex]?.value;

        if (!isNaN(purposeVal) && amount > 0 && method) {
            document.getElementById('summaryType').textContent = purposeText;
            document.getElementById('summaryAmount').textContent = formatCurrency(amount);
            document.getElementById('summaryMethod').textContent = methodSelect.options[methodSelect.selectedIndex].text;

            let remainingAfter = remainingAmount;
            if (purposeVal !== PaymentPurpose.Penalty) {
                remainingAfter = Math.max(0, remainingAmount - amount);
            }

            const remainingEl = document.getElementById('summaryRemaining');
            remainingEl.textContent = formatCurrency(remainingAfter);
            remainingEl.className = remainingAfter > 0 ? 'text-danger fw-bold' : 'text-success fw-bold';

            paymentSummary.style.display = 'block';
        } else {
            paymentSummary.style.display = 'none';
        }
    }

    function formatCurrency(value) {
        return new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'USD'
        }).format(value);
    }
  </script>
}

