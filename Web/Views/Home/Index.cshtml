@{
  ViewData["Title"]="About Us";
}

<div class="row">
  <div class="col-12 text-center mb-5">
    <h1 class="display-5 fw-bold">About CarRental</h1>
    <p class="lead text-muted">Your trusted car rental partner since 2010</p>
  </div>
</div>

<div class="row mb-5">
  <div class="col-lg-6 mb-4">
    <img src="https://images.unsplash.com/photo-1485463611174-f302f6a5c1c9?w=600&h=400&fit=crop"
         alt="About us" class="img-fluid rounded shadow" />
  </div>
  <div class="col-lg-6 d-flex align-items-center">
    <div>
      <h3 class="fw-bold mb-4">Our Story</h3>
      <p class="text-muted mb-3">
        Founded in 2010, CarRental has been serving customers with quality
        vehicles and exceptional service for over 15 years.
      </p>
      <p class="text-muted">
        We believe in making car rental simple, affordable, and accessible
        to everyone. Our commitment to customer satisfaction has made us
        a leader in the industry.
      </p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12 text-center">
    <h3 class="fw-bold mb-4">Our Values</h3>
  </div>
  <div class="col-md-4 mb-3">
    <div class="card h-100 border-0 bg-light">
      <div class="card-body text-center">
        <i class="bi bi-heart text-danger" style="font-size: 2.5rem;"></i>
        <h5 class="mt-3">Customer First</h5>
        <p class="text-muted">Your satisfaction is our priority</p>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-3">
    <div class="card h-100 border-0 bg-light">
      <div class="card-body text-center">
        <i class="bi bi-shield-check text-success" style="font-size: 2.5rem;"></i>
        <h5 class="mt-3">Quality & Safety</h5>
        <p class="text-muted">Well-maintained, reliable vehicles</p>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-3">
    <div class="card h-100 border-0 bg-light">
      <div class="card-body text-center">
        <i class="bi bi-lightning text-warning" style="font-size: 2.5rem;"></i>
        <h5 class="mt-3">Innovation</h5>
        <p class="text-muted">Modern solutions for modern needs</p>
      </div>
    </div>
  </div>
</div>


