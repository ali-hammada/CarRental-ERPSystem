@model IEnumerable<ApplicationCore.Entities.Employees>

@{
  ViewData["Title"]="Employees Management";
}

<div class="container-fluid mt-4">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card bg-gradient-primary text-white shadow-sm border-0">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h3 class="mb-1">
                <i class="bi bi-people-fill me-2"></i> Employees Management
              </h3>
              <p class="mb-0 opacity-90">Manage your employees efficiently</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
              <a asp-action="Create" class="btn btn-light btn-lg">
                <i class="bi bi-plus-circle me-1"></i> Add New Employee
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Alert Messages -->
  @if(TempData["Success"]!=null)
  {
    <div class="row mb-4">
      <div class="col-12">
        <div class="alert alert-success alert-dismissible fade show">
          <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    </div>
  }

  @if(TempData["Error"]!=null)
  {
    <div class="row mb-4">
      <div class="col-12">
        <div class="alert alert-danger alert-dismissible fade show">
          <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    </div>
  }

  <!-- Employees Table -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0">
          <h5 class="mb-0 text-primary">
            <i class="bi bi-list-ul me-2"></i> All Employees (@Model.Count())
          </h5>
        </div>
        <div class="card-body">
          @if(Model.Any())
          {
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  @foreach(var employee in Model)
                  {
                    <tr>
                      <td>
                        <span class="badge bg-secondary">#@employee.Id</span>
                      </td>
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-person fs-5"></i>
                          </div>
                          <div>
                            <strong>@employee.FullName</strong>
                          </div>
                        </div>
                      </td>
                      <td>
                        <a href="mailto:@employee.Email" class="text-decoration-none">
                          <i class="bi bi-envelope-fill text-primary me-1"></i>
                          @employee.Email
                        </a>
                      </td>
                      <td>
                        <a href="tel:@employee.Phone" class="text-decoration-none">
                          <i class="bi bi-telephone-fill text-success me-1"></i>
                          @employee.Phone
                        </a>
                      </td>
                      <td>
                        <span class="badge bg-info text-dark">@employee.Role</span>
                      </td>
                      <td>
                        @if(employee.IsActive)
                        {
                          <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                          <span class="badge bg-secondary">Inactive</span>
                        }
                      </td>
                      <td class="text-end">
                        <div class="btn-group btn-group-sm">
                          <a asp-action="Edit" asp-route-id="@employee.Id"
                             class="btn btn-outline-warning" title="Edit">
                            <i class="bi bi-pencil"></i>
                          </a>
                          <a asp-action="Delete" asp-route-id="@employee.Id"
                             class="btn btn-outline-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                          </a>
                        </div>
                      </td>
                    </tr>
                  }
                </tbody>
              </table>
            </div>
          }
          else
          {
            <div class="text-center py-5">
              <div class="mb-3">
                <i class="bi bi-people fs-1 text-muted"></i>
              </div>
              <h5 class="text-muted">No employees found</h5>
              <p class="text-muted small mt-2">Add your first employee to get started</p>
              <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle me-1"></i> Add Employee
              </a>
            </div>
          }
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <style>
    .bg-gradient-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .table-hover tbody tr:hover {
      background-color: rgba(102, 126, 234, 0.05);
      transform: translateY(-2px);
      transition: all 0.3s ease;
    }

    .btn-group .btn {
      transition: all 0.2s ease;
    }

      .btn-group .btn:hover {
        transform: scale(1.1);
      }
  </style>
}