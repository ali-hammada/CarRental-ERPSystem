@model IEnumerable<ApplicationCore.Entities.Customer>

@{
  ViewData["Title"]="Customers Management";
}

<div class="container-fluid mt-4">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card bg-gradient-primary text-white shadow-sm border-0">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h3 class="mb-1">
                <i class="bi bi-people-fill me-2"></i> Customers Management
              </h3>
              <p class="mb-0 opacity-90">Manage your customers efficiently</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
              <a asp-action="Create" class="btn btn-light btn-lg">
                <i class="bi bi-plus-circle me-1"></i> Add New Customer
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Alert Messages -->
  @if(TempData["Success"]!=null)
  {
    <div class="row mb-4">
      <div class="col-12">
        <div class="alert alert-success alert-dismissible fade show">
          <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    </div>
  }

  @if(TempData["Error"]!=null)
  {
    <div class="row mb-4">
      <div class="col-12">
        <div class="alert alert-danger alert-dismissible fade show">
          <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    </div>
  }

  <!-- Customers Grid -->
  @if(!Model.Any())
  {
    <div class="row">
      <div class="col-12">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <div class="text-center py-5">
              <div class="mb-3">
                <i class="bi bi-people fs-1 text-muted"></i>
              </div>
              <h5 class="text-muted">No customers found</h5>
              <p class="text-muted small mt-2">Add your first customer to get started</p>
              <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle me-1"></i> Add Customer
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  }
  else
  {
    <div class="row g-4">
      @foreach(var customer in Model)
      {
        <div class="col-xl-4 col-md-6">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0">
                <i class="bi bi-person-circle me-2"></i> @customer.Name
              </h5>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <div class="d-flex align-items-center mb-2">
                  <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 30px; height: 30px;">
                    <i class="bi bi-envelope fs-6"></i>
                  </div>
                  <div>
                    <small class="text-muted">Email</small>
                    <p class="mb-0 fw-bold">@customer.Email</p>
                  </div>
                </div>

                <div class="d-flex align-items-center mb-2">
                  <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 30px; height: 30px;">
                    <i class="bi bi-telephone fs-6"></i>
                  </div>
                  <div>
                    <small class="text-muted">Phone</small>
                    <p class="mb-0 fw-bold">@customer.Phone</p>
                  </div>
                </div>

                <div class="d-flex align-items-center mb-2">
                  <div class="bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 30px; height: 30px;">
                    <i class="bi bi-credit-card fs-6"></i>
                  </div>
                  <div>
                    <small class="text-muted">License Number</small>
                    <p class="mb-0 fw-bold">@customer.DrivingLicenseNumber</p>
                  </div>
                </div>

                <div class="d-flex align-items-center">
                  <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 30px; height: 30px;">
                    <i class="bi bi-calendar-event fs-6"></i>
                  </div>
                  <div>
                    <small class="text-muted">License Expiry</small>
                    <p class="mb-0 fw-bold">@customer.LicenseExpiryDate.ToString("dd MMM yyyy")</p>
                  </div>
                </div>
              </div>

              <!-- License Status Badge -->
              <div class="mb-3">
                @{
                  var daysToExpiry = (customer.LicenseExpiryDate-DateTime.Now).Days;
                  var badgeClass = daysToExpiry<30 ? "bg-danger" : daysToExpiry<90 ? "bg-warning text-dark" : "bg-success";
                  var statusText = daysToExpiry<0 ? "Expired" : daysToExpiry==0 ? "Expires Today" :
                  daysToExpiry<30 ? $"Expires in {daysToExpiry} days" : "Valid";
                }
                <span class="badge @badgeClass w-100 py-2">
                  <i class="bi bi-patch-check-fill me-1"></i> @statusText
                </span>
              </div>

              <!-- Action Buttons -->
              <div class="d-grid gap-2">
                <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning">
                  <i class="bi bi-pencil-fill me-1"></i> Edit Customer
                </a>
                <form asp-action="Delete" asp-route-id="@customer.Id" method="post"
                      onsubmit="return confirm('Are you sure you want to delete this customer?');">
                  @Html.AntiForgeryToken()
                  <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-1"></i> Delete Customer
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  }
</div>

@section Scripts {
  <style>
    .bg-gradient-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      }

    .btn {
      transition: all 0.2s ease;
    }

      .btn:hover {
        transform: scale(1.02);
      }
  </style>
}